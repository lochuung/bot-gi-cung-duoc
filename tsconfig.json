{
  "compilerOptions": {
    "target": "ES6", // Phiên bản JS đầu ra
    "module": "commonjs", // Loại module
    "outDir": "./dist", // Thư mục chứa mã biên dịch
    "rootDir": "./src", // Thư mục chứa mã nguồn
    "strict": true, // Bật chế độ kiểm tra nghiêm ngặt
    "esModuleInterop": true, // Cho phép import theo kiểu ES module
    "forceConsistentCasingInFileNames": true
  }
}